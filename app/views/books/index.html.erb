<%= flash[:notice] %>


<%= @books.each do |book| %>

<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>

  
  
</tr> 
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @books.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>