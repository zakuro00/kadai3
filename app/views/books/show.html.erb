
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'book', user: @user, book: @newbook %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class= "table-hover table-inverse">
        <thead>
            <tr>
              <th></th>
              <th><%= image_tag @book.user.get_profile_image(100,100) %></th>
              <th><p><%= @book.title %></p></th>
              <th><p><%= @book.body %></p></th>
              <th colspan="3"></th>
              <td>
            
                  <%= link_to "edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
              
              </td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
            </tr>
        </thead>
      </table>
    </div>
  </div>
</div>