<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book', user: @user, book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class= "table-hover table-inverse">
        <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><p><%= book.user.name %></p></td>
              <td><p><%= link_to "show", user_path(book.user) %></p></td>
            </tr> 
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>