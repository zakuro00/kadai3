
    <%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <%= render 'books/book', user: @user, book: @book %>
    </div>

      <div class="col-md-8 offset-md-1">
          <!-- ユーザーの投稿一覧 -->
          <h4>Books</h4>
         <table class= "table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>

            <tr>
               <td><%= image_tag @user.get_profile_image(100,100) %></td>
               <td><%= link_to book.title, book_path(book.id)%></td>
               <td><%= book.body %></td>
            </tr> 
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>